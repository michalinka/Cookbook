<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Category</th>
      <th>Preparing time</th>
      <th>Difficulty</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.content %></td>
        <td><%= Category.find_by_id(recipe.category_id).name %></td>
        <td><%= recipe.preparing_time %></td>
        <td><%= recipe.difficulty %></td>
        <td><%= link_to 'Show', recipe, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe),class: 'btn btn-info btn-xs'%></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_recipe_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Recipe
<% end %>
